.page-header
  %h2 Editar Iniciativa ##{@initiative.number}
= form_for [:admin, @initiative], :html => {:multipart => true} do |form|
  = render "admin/shared/error_messages", :target => @initiative
  %fieldset
    = render :partial => 'form', :locals => {:form => form}
    .actions
      = form.submit 'Actualizar Iniciativa', :class => 'btn primary'
      %input{:type => 'reset', :class => 'btn', :value => 'Limpiar'}