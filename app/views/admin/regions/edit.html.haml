.page-header
  %h2 Editar Circunscripción
= form_for [:admin, @region], :html => {:multipart => true} do |form|
  = render "admin/shared/error_messages", :target => @region
  %fieldset
    = render :partial => 'form', :locals => {:form => form}
    .actions
      = form.submit 'Crear Circunscripción', :class => 'btn btn-primary'
      %input{:type => 'reset', :class => 'btn', :value => 'Limpiar'}